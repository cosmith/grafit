{
    "manifest_version": 2,

    "name": "Grafit",
    "description": "Instant graphs",
    "version": "0.2",

    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/content_script.js"],
            "run_at" : "document_end"
        }
    ],

    "permissions": [
        "tabs",
        "contextMenus",
        "<all_urls>"
    ],

    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png"
    }
}